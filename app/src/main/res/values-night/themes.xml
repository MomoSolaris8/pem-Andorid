<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyWithMe" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlack</item>
        <item name="colorOnPrimary">@color/lightGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/darkBlue</item>
        <!-- Icons & Button -->
        <item name="iconColor">@color/darkBlue</item>
        <item name="colorAccent">@color/darkBlue</item>
        <!-- Bottom Navigation -->
        <item name="navigationBackgroundColor">@color/darkBlack</item>
        <item name="selectedColor">@color/white</item>
        <item name="unselectedColor">@color/darkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SplashActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ActivityAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>
</resources>